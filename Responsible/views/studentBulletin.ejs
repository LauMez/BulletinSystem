
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Boletin</title>

    <link rel="stylesheet" href="/responsible/css/studentBulletin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>

    <div class="btn_back" id="btn_back">
        <i class="fa-solid fa-arrow-left"></i>
    </div>
    <div class="contenedor-boletin">
        <table>
            <input type="checkbox" name="" id="button__abrir_materias">


            <tr> 
                <td class="header" rowspan="3">Materias</td> 
                <td class="header">1ºcuatrimestre</td> 
                <td class="header" colspan="2">2º cuatrimestre</td> 
                <td class="header" rowspan="3">cierre anual</td>
                <td class="header" rowspan="3">intensificacion diciembre</td>
                <td class="header" rowspan="3">intencificacion febrero</td>
                <td class="header" rowspan="3">intensificacion ampliatoria marzo </td>
                <td class="header" rowspan="3">nota final</td> 
            </tr> 
            
                <tr> 
                    
                    <td class="header second_line" rowspan="2">Valoracion pedagogica</td> 
                    <td class="header second_line" rowspan="2">intensificacion cuatrimestre1 </td> 
                    <td class="header second_line" rowspan="2">valoracion pedagogica</td> 
                    
                </tr>

                <tr> 
                </tr> 

                <% subjects.forEach(function(subject) { %>
                    <tr>
                        <td class="dato-boletin"><%= subject.name %></td>
                        <td class="dato-boletin">TEA</td>
                        <td class="dato-boletin">-</td>
                        <td class="dato-boletin">TEA</td>
                        <td class="dato-boletin">-</td>
                        <td class="dato-boletin">-</td>
                        <td class="dato-boletin">-</td>
                        <td class="dato-boletin">-</td>
                        <td class="dato-boletin">TEA</td>
                    </tr>
                <% }) %>
        </table>
        <label for="button__abrir_materias"><i class="fas fa-chevron-down"></i></label>

    </div>
    <div class="asistencias-contenedor">
        <div id="cantidad-asistencias" class="presente">
            <h1 class="numero">20</h1>
            <h2 class="tipo-falta">Presentes totales</h2>
        </div>

        <hr class="divisor">
        
        <div id="cantidad-asistencias" class="ausente">
            <h1 class="numero">7</h1>
            <h2 class="tipo-falta">Ausentes totales</h2>
        </div>
        
        <hr class="divisor">

        <div id="cantidad-asistencias" class="faltas-justificadas">
            <h1 class="numero">2</h1>
            <h2 class="tipo-falta">Faltas Justificadas totales</h2>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var backButton = document.getElementById('btn_back')

            backButton.addEventListener('click', function() {
                if(window.history.length > 1) window.history.back()
                else alert('No hay historial para volver')
            })
        })
    </script>
</body>
</html>